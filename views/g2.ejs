<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../views/partials/head.ejs', {title: 'G2 Test'}); %>
</head>

<body>
    <%- include('../views/partials/navbar.ejs'); %>
        <div class="margin-top-10">
            <h1 class="txt-cntr ">Book your G2 driving test now</h1>
            <div class="container-cntr flex-row ">
                <section id="personal-detail-container">
                    <h4 class="txt-color-theme">Enter your Information</h4>
                    <form>
                        <div class="mb-3">
                            <label for="firstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="firstName" aria-describedby="emailHelp">
                        </div>
                        <div class="mb-3">
                            <label for="lastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="lastName">
                        </div>
                        <div class="mb-3">
                            <label for="licenseNumber" class="form-label">License number</label>
                            <input type="text" class="form-control" id="licenseNumber">
                        </div>
                        <div class="mb-3">
                            <label for="age" class="form-label">Age</label>
                            <input type="number" class="form-control" id="age">
                        </div>
                        <div class="mb-3">
                            <label for="dob" class="form-label">DOB</label>
                            <input type="date" class="form-control" id="dob">
                        </div>
                        <button type="button" class="btn txt-color">Book Test</button>
                    </form>
                </section>
                <section id="car-detail-container">
                    <h4 class="txt-color-theme">Enter car details</h4>
                    <form>
                        <div class="mb-3">
                            <label for="carName" class="form-label">Car Name</label>
                            <input type="text" class="form-control" id="carName" aria-describedby="emailHelp">
                        </div>
                        <div class="mb-3">
                            <label for="carModel" class="form-label">Model</label>
                            <input type="number" class="form-control" id="carModel">
                        </div>
                        <div class="mb-3">
                            <label for="registerYear" class="form-label">Register Year</label>
                            <input type="number" class="form-control" id="registerYear">
                        </div>
                        <div class="mb-3">
                            <label for="plateNumber" class="form-label">Plate Number</label>
                            <input type="number" class="form-control" id="plateNumber">
                        </div>
                    </form>
                </section>
            </div>
        </div>
        <%- include('../views/partials/footer.ejs'); %>
            <%- include('../views/partials/scripts.ejs'); %>
</body>

</html>