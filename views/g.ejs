<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../views/partials/head.ejs' , {title: 'G Test'}); %>
</head>

<body>
    <%- include('../views/partials/navbar.ejs'); %>
        <%- include('../views/partials/carousel.ejs'); %>
            <% if ( foundUser === 'No User Found' ) { %>
                <div class="txt-cntr margin-top-10">
                    <a class="txt-color-theme" href="/g2">No User found Click here to register!</a>
                </div>
                <% } %>
                    <div class="container-cntr ">
                        <h1>Book your G Driving test now</h1>
                        <div class="g-form-container">
                            <form action="/g/user" method="POST">
                                <label for="licenseNumber" class="form-label">Enter License number</label>
                                <input type="text" class="form-control" name="licenseNumber" id="licenseNumber">
                                <button type="submit" class="btn margin-top-10 txt-color">Enter</button>
                            </form>
                        </div>
                    </div>
                    <% if ( user ) { %>
                        <h1 class="txt-cntr ">User details</h1>
                        <form action="/g2/updateG2Driver/<%= user._id %>" method="POST">
                            <div class="container-cntr flex-row ">
                                <section id="personal-detail-container">
                                    <h4 class="txt-color-theme">Your Information</h4>
                                    <div class="mb-3">
                                        <label for="firstName" class="form-label">First Name</label>
                                        <input readonly value="<%= user.firstName %>" type="text" class="form-control" name="firstName" id="firstName">
                                    </div>
                                    <div class="mb-3">
                                        <label for="lastName" class="form-label">Last Name</label>
                                        <input readonly value="<%= user.lastName %>" type="text" class="form-control" name="lastName" id="lastName">
                                    </div>
                                    <div class="mb-3">
                                        <label for="licenseNumber" class="form-label">License number</label>
                                        <input readonly value="<%= user.licenseNumber %>" type="text" class="form-control" name="licenseNumber" id="licenseNumber">
                                    </div>
                                    <div class="mb-3">
                                        <label for="age" class="form-label">Age</label>
                                        <input readonly type="text" class="form-control" name="age" id="age" value="<%= user.age %>">
                                    </div>
                                    <div class="mb-3">
                                        <label for="dob" class="form-label">DOB</label>
                                        <input readonly value=" <%= user.dob %>" type="text" class="form-control" name="dob" id="dob">
                                    </div>
                                </section>
                                <section id="car-detail-container">
                                    <h4 class="txt-color-theme">Enter car details</h4>
                                    <div class="mb-3">
                                        <label for="make" class="form-label">Car Name</label>
                                        <input type="text" class="form-control" name="make" id="make" value="<%= user.carDetails.make %>">
                                    </div>
                                    <div class="mb-3">
                                        <label for="model" class="form-label">Model</label>
                                        <input type="text" class="form-control" name="model" id="model" value="<%= user.carDetails.model %>">
                                    </div>
                                    <div class="mb-3">
                                        <label for="year" class="form-label">Register Year</label>
                                        <input type="text" class="form-control" name="year" id="year" value="<%= user.carDetails.year %>">
                                    </div>
                                    <div class="mb-3">
                                        <label for="plateNumber" class="form-label">Plate Number</label>
                                        <input type="text" class="form-control" name="plateNumber" id="plateNumber" value="<%= user.carDetails.plateNumber %>">
                                    </div>
                                    <button type="submit" class="btn txt-color">Update</button>
                                </section>
                            </div>
                        </form>
                        <% } %>
                            <%- include('../views/partials/footer.ejs'); %>
                                <%- include('../views/partials/scripts.ejs'); %>
</body>

</html>